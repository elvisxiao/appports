    script.
        var eleAnimate = $('#jsAnimate');
        var btn = $('.zBtnInfo');
        var slc = $('#slc');

        var animate = function(){
            btn.attr('disabled', true);
            slc.attr('disabled', true);
            var animateName =  slc.val();
            eleAnimate.addClass(animateName);
            setTimeout(function(){
                eleAnimate.removeClass(animateName);
                btn.removeAttr('disabled');
                slc.removeAttr('disabled');
            }, 1000);
        }
        $('.zBtnInfo').on('click', animate);
        $('#slc').on('change', animate)