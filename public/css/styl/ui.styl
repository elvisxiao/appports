
.banner
    height 180px
    padding 10px 0
    color #666
    background-size 30px 30px
    background-color #F2F2F2
    background-image linear-gradient(0, #eaeaef 1px, transparent 1px, transparent), linear-gradient(90deg, #eaeaef 1px, transparent 1px, transparent)
    h2 
        font-size 36px 
        font-weight 100
        color #444

.zSidebar
    display inline-block
    font-size 14px
    border-right 1px solid #dfdfdf
    box-sizing border-box
    *
        box-sizing border-box
    dl 
        margin 15px 0
    dt
        margin-left 0
        padding-left 15px
        margin-bottom 5px
    dt
        border-left 3px solid #3BB4F2
        color #555
        font-weight 600
        font-size 16px
    dd
        color #888
        cursor pointer
        padding 0
        margin 0
        white-space nowrap
        a
            padding-left 17px
            text-decoration none
            color inherit
            display inline-block
            height 30px 
            line-height 30px
            width 100%
            &:hover
                background #eee
    dd a.active
        background #d9edf7
        color #31708f

.zCode
    border 1px solid #dedede
    background #f5f2f0
    word-break break-all
    word-wrap break-word
    white-space pre-wrap
    font-size 13px
    color #555
    padding .5em 1.2em
    line-height 1.4em
.tRed
    color #c7254e
blockquote 
    border-left 3px solid #dfdfdf
    margin 0
    font-size 15px
    padding 1em 0 1em 3em
p, div 
    line-height 1.5em
p
    margin 10px 0
h1, h2, h3, h4
    font-weight bold
h3 
    font-size 20px
h4
    font-size 16px
h3[data-active]
    border-bottom 1px solid #ddd
    margin 15px 0
    padding 5px 0 15px 0