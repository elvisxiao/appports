#wrapperTurntable
    border-radius 1000px
    min-height 600px
    #formTurntable
        height 500px
        right 340px
        left 0
        top 80px
        transition all 1s
        margin-right 20px
        background #63a200
        border-radius 600px
        border-top-right-radius 0
        border-bottom-right-radius 0
        color #fff
        position absolute
        overflow hidden
        font-size 12px
        input
            width 100px
            padding 2px 10px
            height 26px
        textarea
            font-size 12px
            width 100%
        .text-muted 
            font-size 12px
            color #ddd
        h3
            font-size 18px
            background #7bbf0f
            color #ffe63c
            margin-top 0
            padding 20px 0 15px 180px
            margin-bottom 30px
        table
            margin-left 120px

    #divTurntable
        transition all 1s ease-out
        display inline-block
        text-align center
        overflow hidden 
        position relative 
        border-radius 10000px
        border 20px solid #3fa3e4
        position absolute
        right 20px
        top 50px
        &:before 
            content ""
            position absolute
            left -1px
            top -1px 
            bottom -1px
            right -1px
            border 6px solid #2b7bc4
            border-radius inherit
            box-shadow 0 0 20px #28659d inset
            z-index 1
        canvas
            z-index -1
        img
            cursor pointer
            position absolute
            left 50%
            top 50%
            margin-left -19%
            margin-top -19%
            width 38%
            z-index 1
    &.mini 
        #formTurntable
            left 600px
            right 50%
            overflow visible
            #iconShow
                left -346px
                color #ddd
                top 220px
                &:before
                    content "\e630"
            table, h3
                display none
        #divTurntable
            right 50%
            margin-right -270px

#slotmachine
    display inline-block
    min-width 800px
    position relative
    text-align left
    transition width .3s
    margin-top 80px
    &.lg
        width 1150px
        #slotHead
            top -128px
        .slotTop
            height 50px
            margin 0 26px -12px 26px
        #prizeInfo
            font-size 15px 
            font-weight 600
    #slotHead
        position absolute
        left 50px 
        top -136px
        z-index 1
        img 
            width 210px
            z-index 1
            position relative
        >span
            padding 12px 20px 12px 70px
            background #6fb00e
            color #fff
            font-size 16px
            font-weight 600
            border-radius 50px
            position relative
            left -100px
            z-index 0
            top 26px
            color #edf023
        i
            background-color #edf023
            color #6fb00e
            font-size 20px
            font-weight 600
            border-radius 50px
            padding 1px
            vertical-align middle
            margin-left 10px
            position relative
            top -2px
    #iconShow
        color #666
        left -80px
        top 180px
    .slotTop
        border-top-left-radius 5px 
        border-top-right-radius 5px
        margin 0 13px -11px 13px
        height 40px
        background-color #7ec600
        transform perspective(600px) rotateX(60deg)
    .slotRight
        position absolute
        right -50px 
        width 50px
        top 50%
        margin-top -100px
        img
            width 100%
    .slotInner
        box-shadow 0 5px 0 #335b02
        position relative
        z-index 2
        background-color #6fb00e
        height 350px
        border-radius 6px
        .slotScrool
            padding 35px 18px
            #prizedPersonList
                height 280px
                color #eee
                font-size 12px
                overflow-x hidden
                overflow-y auto
                padding 10px 
                p 
                    margin 0
                    white-space nowrap
                    overflow hidden
                    text-overflow ellipsis
                    &.text-warning
                        color #edf023
                        
            #scrollMain
                height 230px
                white-space nowrap
                padding 4px
                display inline-block
                position relative
                .scrollItem
                    padding 7px
                    position relative
                    display inline-block
                    &::after
                        content ' '
                        background #f00
                        position absolute
                        top 15%
                        bottom 15%    
                        left 7px  
                        right 7px       
                        box-shadow 0 0 30px rgba(0,0,0,0.9)
                        border-radius 40px
                        z-index 0
                .scrollItemInner
                    box-shadow 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset
                    background linear-gradient(#477d01, #fff, #477d01)
                    height 200px
                    width 150px
                    vertical-align top
                    overflow hidden
                    position relative
                    z-index 1
                    
                    img
                        position absolute
                        left 0
                        bottom 0
                        width 100%
                        height 100%
                        transition bottom .3s linear
                        &.in
                            bottom 200px
                    .scrollPerson
                        position absolute
                        width 100%
                        height 100%
                        left 0
                        color #444
                        bottom -200px
                        transition bottom .3s linear
                        &.disable
                            transition none
                        .scrollPersonName
                            font-size 33px 
                            font-weight 700
                            padding-top 60px
                            color #222
                        .scrollPersonInfo
                            position absolute
                            bottom 0
                            left 0
                            width 100%
                            font-size 12px
                        .scrollPersonNumber
                            position absolute
                            right 10px
                            font-size 12px
                            top 10px
                
    #prizeInfo
        color #edf023
        font-size 13px
        padding-top 30px
    #btnPrize
        float right
        background-color #edf023
        font-weight 700
        font-size 18px
        color #6f2b00
        width 130px
        box-shadow 0 4px 0px #d1bc00
        margin-top -12px
        &:hover 
            color #6f2b00 !important
.hTitle
    font-size 14px
    background-color #f0f2f5
    padding 10px 15px
#formSlotmachine
    #formAddPrize
        transition all .3s
        overflow hidden
        height 290px
        width 100%
        &.mini 
            width 150px 
            height 80px
            display block
        h3
            cursor pointer
            font-family 'icomoon' !important
            transition all .5s
            &:before
                float right
                margin-left 15px
                content "\e62d"
            &:hover 
                background-color #ddd
                
    label
        display inline-block
        width 100px
    
    .prizeItem
        position relative
        padding 20px 10px 20px 110px
        background-color #f0f2f5
        border-radius 3px
        height 136px
        overflow hidden
        margin-top 20px
        img 
            background-color #aaa
            position absolute
            left 18px
            top 13px
            width 81px 
            height 108px
            opacity 0.9
        .prizeTitle
            margin-top 0
            color #002e5b
            font-weight 700
            font-size 14px
        .prizeInfo
            font-size 12px
            color #888
        .icon
            position absolute
            right 0
            top 0
            display block
            width 20px 
            height 20px
            text-align center
            color #999
            cursor pointer
            &:hover
                color #000

#iconExportPrizedPerson
    position absolute
    right 20px 
    top 13px 
    color #888
    cursor pointer
    &:hover 
        color #ddd
        